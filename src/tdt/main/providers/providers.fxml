<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tdt.main.providers.ProvidersController">
    <stylesheets>
        <URL value="@providers.css" />
    </stylesheets>
   <children>
      <VBox id="vBox" fx:id="vBox" prefHeight="427.0" prefWidth="600.0">
         <children>
            <TableView id="table" fx:id="table" prefHeight="439.0" prefWidth="449.0">
              <columns>
                <TableColumn id="id" fx:id="id" prefWidth="93.0" text="ID" />
                <TableColumn id="name" fx:id="name" prefWidth="342.0" text="Nombre" />
                  <TableColumn id="cif" fx:id="cif" prefWidth="164.0" text="CIF" />
              </columns>
            </TableView>
         </children>
      </VBox>
      <AnchorPane layoutY="425.0">
         <children>
            <HBox id="hBox" fx:id="hBox" prefHeight="45.0" prefWidth="600.0" spacing="10.0">
               <children>
                  <TextField id="inputName" fx:id="inputName" promptText="Name" HBox.hgrow="ALWAYS" />
                  <TextField id="inputCif" fx:id="inputCif" promptText="CIF" />
                  <Button id="deleteButton" fx:id="addButton" mnemonicParsing="false" text="Add" />
                  <Button id="deleteButton" fx:id="deleteButton" mnemonicParsing="false" text="Delete" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
